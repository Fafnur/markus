<!doctype html>
<!--[if lt IE 7]>
<html class="no-js ie lt-ie9 lt-ie8 lt-ie7" lang=""> <![endif]-->
<!--[if IE 7]>
<html class="no-js ie lt-ie9 lt-ie8" lang=""> <![endif]-->
<!--[if IE 8]>
<html class="no-js ie lt-ie9" lang=""> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang=""> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block page_title %}Markus{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}"/>
    <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}"/>

    <meta name="description" content="{% block meta_description %}Markus{% endblock %}">
    <meta name="keywords" content="{% block meta_keywords %}Markus{% endblock %}">
    {% block meta_og_all %}
        <meta property="og:title" content="{% block meta_og_title %}{% endblock %}"/>
        <meta property="og:type" content="{% block meta_og_type %}{% endblock %}"/>
        <meta property="og:url" content="{% block meta_og_url %}{% endblock %}"/>
        <meta property="og:image" content="{% block meta_og_img %}{% endblock %}"/>
        <meta property="og:image:type" content="{% block meta_og_img_type %}image/jpeg{% endblock %}"/>
        <meta property="og:image:width" content="{% block meta_og_img_width %}400{% endblock %}"/>
        <meta property="og:image:height" content="{% block meta_og_img_height %}300{% endblock %}"/>
        <meta property="og:description" content="{% block meta_og_description %}{% endblock %}"/>
        <meta property="og:locale" content="ru_RU"/>
    {% endblock %}

    {% block stylesheet_all %}
        <link rel="stylesheet" href="{{ asset('components/bootstrap/dist/css/bootstrap.min.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('css/template.css') }}">
    {% endblock %}

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
{% block body %}

    {% block browserupgrade %}
        <!--[if lt IE 8]>
        <p class="browserupgrade">Вы используете <strong>старый</strong> браузер. Пожалуйства
            <a href="http://browsehappy.com/">обновите свой браузер</a>.</p>
        <![endif]-->
    {% endblock %}

    {% block page_wrapper %}
        <div class="page-wrapper">
            <div class="page-buffer">
                {% include 'common/navbar.html.twig' %}
                {% block header %}
                    <header class="header">
                        <div class="container">
                            <a href="{{ path('homepage') }}" class="logo">Тут мог быть ваш логотип</a>
                        </div>
                    </header>
                {% endblock %}
                {% block top_bar %}{% endblock %}
                {% block content_wrapper %}
                    <div class="content-wr">
                        {% block content_top %}{% endblock %}
                        {% block content %}{% endblock %}
                        {% block content_bottom %}{% endblock %}
                    </div>
                {% endblock %}
                {% block bottom_bar %}{% endblock %}
            </div>
        </div>
    {% endblock %}

    {% block page_footer %}
        <footer class="page-footer">

            {% block footer %}
                <div class="footer">
                    <div class="container">
                        Футер прижатый к низу.
                    </div>
                </div>
            {% endblock %}

        </footer>
    {% endblock %}

    {% block modals_all %}
        {% block modals %}{% endblock %}
    {% endblock %}

    {% block javascript_all %}
        {#<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>#}
        {#<script>window.jQuery || document.write("<script src=\"{{ asset('components/jquery/dist/jquery.min.js') }}\"><\/script>")</script>#}
        <script src="{{ asset('components/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/plugins.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
        {% block javascripts %}{% endblock %}
    {% endblock %}

{% endblock %}
</body>
</html>
